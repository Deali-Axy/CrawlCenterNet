@model CrawlCenter.Data.Models.ConfigSection 
@{
    var configSection = Model;
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div>节点信息</div>
        <div class="text-primary">@configSection.Id</div>
    </div>
    <div class="card-body">
        <form asp-controller="ConfigCenter" asp-action="Edit" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id">

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <a class="btn btn-outline-info" asp-controller="ConfigCenter" asp-action="Edit" asp-route-id="@Model.Id">进入修改</a>
            <button type="submit" class="btn btn-outline-primary">快速修改保存</button>
        </form>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">keys list</div>
    @if (configSection.KeyValues.Count == 0) {
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                该节点下没有配置键！
            </div>
        </div>
    }
    <form>
        <div class="list-group list-group-flush">
            @foreach (var (_, key) in configSection.KeyValues) {
                <div class="list-group-item">

                    <div class="form-row mb-2">
                        <div class="col">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
                                </div>
                                <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@key.Name">
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">说明</span>
                                </div>
                                <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@key.Description">
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Value</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@key.Value">
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-outline-info">保存配置</button>
        </div>
    </form>
</div>