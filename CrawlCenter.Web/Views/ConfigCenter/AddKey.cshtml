@model CrawlCenter.Data.Models.ConfigKey

@{
    ViewData["Title"] = "添加Key - 配置中心";
    string sectionId = ViewBag.SectionId;
}

@section SideMenu {
    <partial name="_SideMenu"/>
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">添加Key</h1>
</div>

<div class="card">
    <div class="card-header">Key</div>
    <div class="card-body">
        <form asp-controller="ConfigCenter" asp-action="AddKey" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <input type="hidden" name="sectionId" value="@sectionId">

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Value" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Value" class="form-control">
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-outline-primary">
                <span data-feather="save"></span>保存
            </button>
            <button type="button" class="btn btn-outline-warning" onclick="history.back()">
                <span data-feather="x-circle"></span>取消
            </button>
        </form>
    </div>
</div>