@model CrawlCenter.Web.ViewModels.Crawl.CrawlTaskCreateViewModel

@{
    ViewData["Title"] = "添加爬虫 - 数据采集";
}

@section SideMenu {
    <partial name="_SideMenu"/>
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">添加爬虫</h1>
</div>

<form enctype="multipart/form-data" asp-controller="Crawl" asp-action="Add" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DisplayName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DisplayName" class="form-control"/>
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control"/>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProjectId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="custom-select mr-sm-2">
                <option value="">未选择</option>
            </select>
            <span class="text-danger" asp-validation-for="ProjectId"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Cmd" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Cmd" class="form-control"/>
            <span class="text-danger" asp-validation-for="Cmd"></span>
        </div>
    </div>

    <div class="form-group">
        <button type="reset" class="btn btn-info mr-2">重置</button>
        <button type="submit" class="btn btn-primary mr-2">提交</button>
        <button type="button" class="btn btn-warning" onclick="history.back()">取消</button>
    </div>
</form>